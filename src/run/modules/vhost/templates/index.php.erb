<?php

require_once './vhost.php';

ksort($vhost);

foreach ($vhost as $host => $containers) {
  ksort($containers);

  $vhost[$host] = $containers;

  foreach ($containers as $container => $links) {
    ksort($links);

    $vhost[$host][$container] = $links;
  }
}

function httpd_link_get($group) {
  global $vhost;

  $httpd_link = NULL;

  foreach ($vhost as $host => $containers) {
    if ($host == $group) {
      foreach ($containers as $container => $links) {
        if ($container == 'httpd') {
          if (count($links) > 1) {
            $httpd_link = $links[80];
          }
          else {
            $httpd_link = array_shift($links);
          }

          break;
        }
      }

      break;
    }
  }

  return $httpd_link;
}

function logs_link_get($group) {
  global $vhost;

  $logs_link = NULL;

  foreach ($vhost as $host => $containers) {
    if ($host == $group) {
      foreach ($containers as $container => $links) {
        if ($container == 'logs') {
          if (count($links) > 1) {
            $logs_link = $links[80];
          }
          else {
            $logs_link = array_shift($links);
          }

          break;
        }
      }

      break;
    }
  }

  return $logs_link;
}

