<!DOCTYPE html>

<html>
  <head>
    <meta charset="utf-8">
    <title>vhost</title>
  </head>
  <body>
    <h1><%= @server_name %></h1>
    {{ range $host, $containers := groupByMulti $ "Env.VHOST" "," }}
      {{ range $container := $containers }}
        {{ range $address := $container.Addresses }}
          {{ if eq $address.Port "80" }}
            <h2>{{ $container.Name }}</h2>
            <p><a href="http://{{ $host }}.<%= @server_name %>">http://{{ $host }}.<%= @server_name %></a></p>
          {{ else if eq $address.Port "443" }}
            <h2>{{ $container.Name }}</h2>
            <p><a href="https://{{ $host }}.<%= @server_name %>">https://{{ $host }}.<%= @server_name %></a></p>
          {{ end }}
        {{ end }}
      {{ end }}
    {{ end }}
  </body>
</html>
